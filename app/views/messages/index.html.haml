= render 'shared/side_bar'

.contents
  .contents__head
    .contents__head__left
      .contents__head__left__group-name
        = @group.name
      .contents__head__left__member-name
        Member : 
        - @group.users.each do |users|
          = users.name
    = link_to edit_group_path(@group.id), class: "contents__head__edit-btn" do
      Edit
  .contents__main
    = render @messages


  .form
    = form_for [@group, @message] do |f|
      .form__input-box
        = f.text_field :content, class: 'form__input-box__message', placeholder: 'type a message'
        .form__input-box__mask
          = f.label :image, class: 'form__input-box__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__submit'